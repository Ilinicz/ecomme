%h3 Cart
%ul
  - @cart.line_items.each do |item|
    %li.line-item
      = item.quantity
      \Ã— 
      = link_to item.product.title, store_path(item.product)
      = number_to_currency(item.total_price)
      = button_to item, method: :delete, class:'btn btn-xs btn-danger' do
        .glyphicon.glyphicon-trash
%h4= "Total: #{number_to_currency(@cart.total_price)}"

= button_to "Empty cart", @cart, method: :delete, data:{confirm: 'Sure?'}, class: 'btn btn-danger btn-sm pull-right'
